# git
alias ts="tig status"
alias gpr="git pull --rebase"
alias gprs="git pull --rebase && gps"
alias gsd="git svn dcommit"
alias gsfr="git svn fetch && git svn rebase"
alias gs="git status"
alias grsh="git reset --hard"
alias gl="git lg"
alias gcp="git cherry-pick"
alias gcl="git clone"
alias gco="git co"
alias gd="git diff"
alias g="git"

# bundler
alias b="bundle"
alias be="b exec"
alias bu="b update"
alias a="be 'autotest'"
alias s="be rake spec"
alias rsi="be rake spec:integration"

# rails
alias r="rails"
alias rs="r server"
alias rc="r console"

alias ll='ls -l'
alias l='ls -l'
alias la='ls -la'
alias ..="cd .."

# some functions
alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -r webrick -e "s = WEBrick::HTTPServer.new(:Port => 9090, :DocumentRoot => Dir.pwd); trap(\"INT\") { s.shutdown }; s.start"'
