# git
alias ts="tig status"
alias gpr="git pull --rebase"
alias gprs="git pull --rebase && gps"
alias gs="git status"
alias grsh="git reset --hard"
alias gl="git lg"
alias gcp="git cherry-pick"
alias gcl="git clone"
alias gco="git co"
alias gd="git diff"
alias g="git"

# bundler
alias b="bundle"
alias be="b exec"
alias bu="b update"
alias a="be 'autotest'"
alias s="be rake spec"
alias rsi="be rake spec:integration"

alias ll='ls -l'
alias l='ls -l'
alias la='ls -la'
alias ..="cd .."

alias -s git="git clone $1"
alias -g L="| less"

alias grcb="./gradlew clean build"
alias gr="./gradlew"

alias h="homesick"
alias v=gvim
