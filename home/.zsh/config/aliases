alias gpr="git pull --rebase"
alias gprs="git pull --rebase && gps"
alias gcpr="git_commit_prompt"

alias b="bundle"
alias be="b exec"
alias a="be 'autotest'"
alias s="be rake spec"
alias rsi="be rake spec:integration"
alias grsh="git reset --hard"

alias bcp="rbenv shell jruby-1.6.5 && buildr clean package"

alias v="mvim"
alias r="rails"
alias rs="r server"
alias rc="r console"
alias m="mate"
alias mate="/Applications/TextMate.app/Contents/SharedSupport/Support/bin/mate"
alias ll='ls -l'
alias l='ls -l'
alias la='ls -la'
alias ..="cd .."

alias ivy="ssh ivy@ivy"

for f in tirpitz pamir titanic metula goya primus kursk hindenburg emil; do
  alias d@$f[1,2]="ssh deploy@$f.hh.blau.de"
  alias b@$f[1,2]="ssh bamboo@$f.hh.blau.de"
done

# some functions
growl() { echo -e $'\e]9;'${1}'\007' ; return ; }
alias serve='echo "SERVING `pwd` ON http://`ifconfig -v en0 inet | grep inet | cut -d " " -f 2`:9090/" && ruby -r webrick -e "s = WEBrick::HTTPServer.new(:Port => 9090, :DocumentRoot => Dir.pwd); trap(\"INT\") { s.shutdown }; s.start"'
